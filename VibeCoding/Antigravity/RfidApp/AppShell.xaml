<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RfidApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:RfidApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <TabBar Route="Main">
        <ShellContent
            Title="Dashboard"
            Icon="dashboard_icon.png"
            ContentTemplate="{DataTemplate views:DashboardPage}"
            Route="DashboardPage" />
        
        <ShellContent
            Title="Inventory"
            Icon="inventory_icon.png"
            ContentTemplate="{DataTemplate views:InventoryPage}"
            Route="InventoryPage" />

        <ShellContent
            Title="Repair"
            Icon="repair_icon.png"
            ContentTemplate="{DataTemplate views:RepairPage}"
            Route="RepairPage" />
    </TabBar>

</Shell>
