<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:RfidApp.ViewModels"
             x:Class="RfidApp.Views.RepairPage"
             Title="Repair Management">

    <ContentPage.BindingContext>
        <vm:RepairViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*">
        <Button Grid.Row="0" 
                Text="+ New Ticket" 
                Command="{Binding NewTicketCommand}"
                Style="{StaticResource PrimaryButtonStyle}"
                Margin="10"/>

        <CollectionView Grid.Row="1" ItemsSource="{Binding Tickets}" Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5" Padding="15" CornerRadius="10" HasShadow="True" BorderColor="Transparent">
                        <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                            <Label Grid.Row="0" Grid.Column="0" Text="{Binding DeviceName}" FontAttributes="Bold" FontSize="16"/>
                            <Label Grid.Row="0" Grid.Column="1" Text="{Binding Status}" TextColor="{StaticResource AccentBlue}" FontAttributes="Bold"/>
                            
                            <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="{Binding IssueDescription}" TextColor="Gray" MaxLines="2" LineBreakMode="TailTruncation" Margin="0,5"/>
                            
                            <Label Grid.Row="2" Grid.Column="0" Text="{Binding RfidTag}" FontSize="10" TextColor="LightGray"/>
                            <Label Grid.Row="2" Grid.Column="1" Text="{Binding CreatedAt, StringFormat='{0:MM/dd}'}" FontSize="10" TextColor="Gray"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
