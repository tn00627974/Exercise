<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:RfidApp.ViewModels"
             x:Class="RfidApp.Views.LoginPage"
             Shell.NavBarIsVisible="False">
    
    <ContentPage.BindingContext>
        <vm:LoginViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <!-- Background Gradient -->
        <BoxView Background="{StaticResource MainGradient}" />

        <Frame BackgroundColor="White"
               CornerRadius="20"
               HasShadow="True"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               WidthRequest="300"
               Padding="30">
            
            <VerticalStackLayout Spacing="15">
                <Label Text="RFID Manager"
                       FontSize="28"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="{StaticResource AccentBlue}" />

                <Label Text="Welcome Back"
                       FontSize="16"
                       HorizontalOptions="Center"
                       TextColor="Gray"
                       Margin="0,0,0,20" />

                <Entry Placeholder="Username"
                       Text="{Binding Username}"
                       ClearButtonVisibility="WhileEditing" />

                <Entry Placeholder="Password"
                       Text="{Binding Password}"
                       IsPassword="True" />

                <Label Text="{Binding ErrorMessage}"
                       TextColor="Red"
                       FontSize="12"
                       HorizontalOptions="Center" />

                <Button Text="LOGIN"
                        Command="{Binding LoginCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="0,10,0,0" />
                
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   Color="{StaticResource AccentBlue}"
                                   HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>
